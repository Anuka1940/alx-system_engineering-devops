#!/usr/bin/env bash
#!/bin/bash

# Install Nginx
apt-get update
apt-get install -y nginx

# Define the custom HTTP header value
custom_header_value=$(hostname)

# Configure Nginx to include the custom HTTP header
echo "add_header X-Served-By \"$custom_header_value\";" >> /etc/nginx/nginx.conf

# Restart Nginx to apply the changes
sudo service  restart nginx

