server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;  # Catch-all server block

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    # Proxy requests to /airbnb-onepage/ to the Gunicorn instance on port 5000
    location = /airbnb-onepage/ {
        proxy_pass http://0.0.0.0:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Proxy requests to /airbnb-dynamic/number_odd_or_even/ to the Gunicorn instance on port 5001
    location ~ ^/airbnb-dynamic/number_odd_or_even/(\d+)$ {
        proxy_pass http://0.0.0.0:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 404 Page:
    error_page 404 /custom_404.html;
    location = /custom_404.html {
        root /usr/share/nginx/html;
        internal;
    }

    # Header:
    add_header X-Served-By "183511-web-01";

    # Rewrite rule for redirection
    rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;

    location / {
        try_files $uri $uri/ =404;
    }
}

